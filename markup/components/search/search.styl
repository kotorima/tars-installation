.search {
    width: 220px;
    position: relative;

    &__form-input-wr {
        display: flex;
        align-items: center;
        justify-content: center;
        border-bottom: 2px solid rgb(212, 215, 217);
        padding-bottom: 12px;
        position: relative;
        width: 100%;
    }

    &__form-input {
        background: transparent;
        border: none;
        font-family: $openSansRegular;
        font-size: remify(14px);
        font-weight: bold;
        line-height: 20px;
        color: rgb(58, 58, 58);
        padding: 0 5px;
        position: relative;
        z-index: 10;

        &:focus {
            outline: none;

            + .search__form-label {
                &:before {
                    width: 100%;
                }

                .search__form-icon {
                    &:first-child {
                        background-position: -6px -29px;
                    }

                    &:last-child {
                        background-position: -30px -29px;
                    }
                }
            }
        }
    }

    &__form-label {
        display: flex;
        align-items: center;
        justify-content: center;
        position: absolute;
        width: 100%;

        &:before {
            content: '';
            position: absolute;
            bottom: -24px;
            width: 0;
            height: 2px;
            background: rgb(19, 201, 237);
            border-radius: 2px;
            $transition();
        }
    }

    &__form-icon {
        bg-svg($search, no-repeat);
        width: 20px;
        height: 20px;
        position: absolute;

        &:first-child {
            background-position: -6px -5px;
            left: 0;
        }

        &:last-child {
            background-position: -30px -5px;
            right: 0;
        }
    }
}