.product-list {
    position: relative;
    padding: 60px 0 100px;
    box-sizing: border-box;
    min-height: calc(100vh - 100px);

    &__content {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-gap: 40px;
        $transition();

        &--hide {
            visibility: hidden;
            opacity: 0;
        }
    }

    &__empty {
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        background: white;
        display: flex;
        align-items: center;
        justify-content: center;
        $transition();
        visibility: hidden;
        opacity: 0;

        &--show {
            visibility: visible;
            opacity: 1;
        }
    }

    &__empty-text {
        font-family: $openSansRegular;
        font-size: remify(16px);
        color: rgb(58, 58, 58); 
    }

    &__preloader {
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        background: white;
        display: flex;
        align-items: center;
        justify-content: center;
        $transition();

        &--hide {
            opacity: 0;
            visibility: hidden;
        }
    }

    &__preloader-block {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        border: 2px solid rgb(255, 0, 106);
        border-right-color: transparent;
        border-left-color: transparent;
        animation: load-spin .7s infinite linear;
        position: absolute;
        top: calc(50vh- 50px)
    }

    @keyframes load-spin {
        100%{ transform: rotate(360deg); }
    }
}