// Mixins.

m-nl()
    margin 0
    padding 0
    text-indent 0
    list-style none
    list-style-position outside

m-cf()
    &:before, &:after
        display table
        content ""

    &:after
        clear both

    .lt-ie8 &
        zoom 1


m-blocks-justify()
    text-align justify
    text-justify newspaper


// You can add your own mixins here:

remify(value) {
  u = unit(value);

  if (u is 'px') {
    return unit(value / 16, 'rem');
  } else {
    return unit(value, u);
  }
}

$transition(style = all) {
  transition: style .25s ease-in-out;
}